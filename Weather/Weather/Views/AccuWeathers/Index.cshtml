@model Weather.Models.IndexViewModel;

<div class="taust">
    <div class="container">
        <form method="post" >
            
                <div>
                    <h1>AccuWeather Forecast</h1>
                    <h3>Search the city</h3>
                    <div class="row">
                        <div class="col-9 city-input">
                            <input asp-for="City" class="form-control" placeholder="City"/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-3 search-button">
                            <button asp-controller="AccuWeathers" asp-action="searchCity" class="btn btn-primary">Search</button>
                        </div>
                    </div>
                    
                </div>
                              
        </form>
    </div>
</div>
